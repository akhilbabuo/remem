<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.blackbird.diary.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_diaryFragment"
            app:destination="@id/diaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.blackbird.diary.ui.main.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary" >
        <action
            android:id="@+id/action_diaryFragment_to_diaryEntryFragment"
            app:destination="@id/diaryEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/diaryEntryFragment"
        android:name="com.blackbird.diary.ui.main.DiaryEntryFragment"
        android:label="fragment_diary_entry"
        tools:layout="@layout/fragment_diary_entry" />
</navigation>